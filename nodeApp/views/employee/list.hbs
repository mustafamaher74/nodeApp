    Create New</a>
<h1>Employee Data</h1>

<form action="/employee/search" method="GET" class="mt-4">
  <div class="form-group">
    <input
      type="text"
      name="q"
      class="form-control"
      placeholder="Enter employee name to get his mobile"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- Display the search results -->
{{#if results}}
  <h4 class="mt-4">Search Results for "{{searchQuery}}":</h4>
  <table class="table table-striped mt-4">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Mobile</th>
      </tr>
    </thead>
    <tbody>
      {{#each results}}
        <tr>
          <td>{{this.fullName}}</td>
          <td>{{this.mobile}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p class="mt-4">No results found.</p>
{{/if}}




  Employee List</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>City</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each list}}
      <tr>
        <td>{{this.fullName}}</td>
        <td>{{this.email}}</td>
        <td>{{this.mobile}}</td>
        <td>{{this.city}}</td>
        <td>
          <a href="/employee/{{this._id}}"><i
              class="fa fa-pencil fa-lg"
              aria-hidden="true"
            ></i></a>
          <a
            href="/employee/delete/{{this._id}}"
            onclick="return confirm('Are you sure to delete this record ?');"
          ><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>


<form action="/employee/search-by-city" method="GET" class="mt-5">
  <div class="form-group">
    <input
      type="text"
      name="q"
      class="form-control city-input"
      placeholder="Enter city name to search employees"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary city-search-btn">Search by City</button>
  
</form>


{{#if cityResults}}
    <h4 class="mt-5">Search Results for "{{citySearchQuery}}":</h4>
    <table class="table table-striped mt-5">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>City</th>
        </tr>
      </thead>
      <tbody>
        {{#each cityResults}}
          <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.city}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="mt-5">No results found.</p>
  {{/if}}

</form>